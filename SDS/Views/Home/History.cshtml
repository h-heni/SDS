@{
    ViewData["Title"] = "History";
}
@model History

<form asp-action="Choice" asp-asp-controller="Home">

    <div class="d-flex my-3 align-items-center gap-3">

    <label class="col-2">choix du jour</label>

        <input type="date" class="form-control col" asp-for="Date" value="@DateTime.Now.ToString("yyyy-MM-dd")">
    </div>
    <div class="d-flex my-3 align-items-center gap-3">

        <label class="col-2">Tableau</label>

        <select class="form-select form-select-sm" aria-label="Large select example" asp-for="Choix">

            <option selected></option>

            <option value="Rapport">Rapport</option>

            <option value="Caisse">Caisse</option>

        </select>

    </div>
    <div class="container d-flex justify-content-end">

        <input type="submit" value="Terminer" class="btn btn-primary">
    </div>
</form>
